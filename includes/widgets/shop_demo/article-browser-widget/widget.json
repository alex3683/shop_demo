{
   "name": "ArticleBrowserWidget",
   "description": "The ArticleBrowserWidget displays a list of articles and lets the user select one.",
   "version": {
      "spec": "0.1.0"
   },

   "integration": {
      "type": "angular"
   },

   "compatibility": [ "json-patch" ],

   "features": {
      "$schema": "http://json-schema.org/draft-04/schema#",
      "type": "object",
      "required": [ "display", "select" ],
      "properties": {

         "articles": {
            "type": "object",
            "description": "Display a list of articles.",
            "required": [ "resource" ],
            "properties": {
               "headline": {
                  "type": "string",
                  "default": "Articles",
                  "description": "The title for the widget."
               },
               "resource": {
                  "type": "string",
                  "description": "Name of the data resource with articles.",
                  "format": "topic"
               },
               "htmlNameLabel": {
                  "type": "string",
                  "description": "Label for the article name.",
                  "default": "Article"
               },
               "htmlIdLabel": {
                  "type": "string",
                  "description": "Label for the article id.",
                  "default": "Art. ID"
               },
               "htmlPriceLabel": {
                  "type": "string",
                  "description": "Label for the article price.",
                  "default": "Price"
               }
            }
         },

         "selection": {
            "type": "object",
            "description": "Select an article.",
            "required": [ "resource" ],
            "properties": {
               "resource": {
                  "type": "string",
                  "description": "Name of the data resource with the selected article.",
                  "format": "topic"
               },
               "action": {
                  "type": "string",
                  "description": "The action to trigger after selection takes place.",
                  "format": "topic"
               }
            }
         }
      }
   }
}
