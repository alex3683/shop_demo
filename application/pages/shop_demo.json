{
   "layout": "application",

   "areas": {
      "activities": [
         {
            "widget": "shop_demo/dummy-articles-activity",
            "features": {
               "articles": {
                  "resource": "articles"
               }
            }
         }
      ],
      "left": [
         {
            "widget": "shop_demo/article-browser-widget",
            "features": {
               "articles": {
                  "resource": "articles"
               },
               "selection": {
                  "resource": "selectedArticle"
               }
            }
         }
      ],
      "right": [
         {
            "widget": "shop_demo/article-teaser-widget",
            "features": {
               "article": {
                  "resource": "selectedArticle"
               },
               "confirmation":   {
                  "action": "addToCart"
               }
            }
         },
         {
            "widget": "shop_demo/shopping-cart-widget",
            "features": {
               "article": {
                  "resource": "selectedArticle",
                  "onActions": [ "addToCart" ]
               }
            }
         }
      ]
   }
}
